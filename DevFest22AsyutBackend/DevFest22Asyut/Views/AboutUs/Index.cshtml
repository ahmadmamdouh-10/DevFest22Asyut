@model System.Collections.Generic.List<DevFest22Asyut.ViewModels.AboutViewModel>

@{
    ViewBag.Title = "Index";
}

<a asp-action="Create" asp-controller="AboutUs" asp-area="" class="btn btn-primary">New About</a>
<p></p>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">No Data</td>
            </tr>
        }
        else
        {
            foreach (var about in Model)
            {
                <form method="post" asp-action="Delete" asp-area="" asp-controller="AboutUs" asp-route-id="@about.Id">

                <tr>
                    <td>@about.Title</td>
                    <td>@about.Description</td>
                    <td>
                        <a asp-action="Edit" asp-controller="AboutUs" asp-area="" asp-route-id="@about.Id" class="btn btn-primary btn-sm">
                           edit
                        </a>
                        <button onclick="return confirm('Are you sure you want to delete this about us')"
                        type="submit" class="btn btn-danger btn-sm">
                            delete

                        </button>
                    </td>
                </tr>

                </form>
            }
        }
    </tbody>
</table>
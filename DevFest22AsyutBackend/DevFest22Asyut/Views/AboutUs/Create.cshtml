@*@model About*@
@model DevFest22Asyut.ViewModels.AboutViewModel

@{
    ViewBag.Title = "Create";
}
<form method="post" asp-action="Create" asp-controller="AboutUs" asp-area="">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control col-lg-4 col-md-6 col-sm-12" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea rows="5" asp-for="Description" class="form-control col-lg-4 col-md-6 col-sm-12"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

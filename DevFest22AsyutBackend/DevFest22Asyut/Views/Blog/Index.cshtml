@using DevFest22Asyut.Helpers
@model System.Collections.Generic.List<DevFest22Asyut.Models.Article>

@{
    ViewBag.Title = "Index";
}

<a asp-action="Create" asp-controller="Blog" asp-area="" class="btn btn-primary">New Blog</a>
<p></p>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">No Data</td>
            </tr>
        }
        else
        {
            foreach (var article in Model)
            {
                <form method="post" asp-action="Delete" asp-area="" asp-controller="Blog" asp-route-id="@article.Id">

                    <tr>
                        <td>@article.Title</td>
                        <td>
                            <img src="@(Constants.BaseUrl+article.Image)" width="150" height="150" />
                        </td>
                        <td>@article.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Blog" asp-area="" asp-route-id="@article.Id" class="btn btn-primary btn-sm">
                                <i class="fa fa-pen"></i>
                            </a>
                            <button onclick="return confirm('Are you sure you want to delete this article')"
                                    type="submit" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i>

                            </button>
                        </td>
                    </tr>

                </form>
            }
        }
    </tbody>
</table>
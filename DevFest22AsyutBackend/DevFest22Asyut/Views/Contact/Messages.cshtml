@model System.Collections.Generic.List<DevFest22Asyut.ViewModels.MessageViewModel>

@{
    ViewBag.Title = "Contact Us Messages";
}

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Message</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No Data</td>
            </tr>
        }
        else
        {
            @foreach (var message in Model)
            {
                <form method="post" asp-action="DeleteMessage" asp-area="" asp-controller="Contact" asp-route-id="@message.Id">
                <tr>
                    <td>@message.Name</td>
                    <td>@message.Email</td>
                    <td>@message.PhoneNumber</td>
                    <td>@message.Message</td>
                    <td>
                        <button class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
                </form>
            }
        }
    </tbody>

</table>
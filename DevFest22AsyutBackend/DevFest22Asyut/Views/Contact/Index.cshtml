@model DevFest22Asyut.ViewModels.ContactInfoViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<a asp-action="Create" asp-controller="Contact" asp-area="" class="btn btn-primary">New Contact</a>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Facebook</th>
            <th>LinkedIn</th>
            <th>Twitter</th>
            <th>YouTube</th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        <tr>
            <td>@Model.Email</td>
            <td>@Model.Facebook</td>
            <td>@Model.LinkedIn</td>
            <td>@Model.Twitter</td>
            <td>@Model.Youtube</td>
            <td>
                <a asp-action="Edit" asp-controller="Contact" asp-area="" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                   edit
                </a>
            </td>
        </tr>

    </tbody>
</table>